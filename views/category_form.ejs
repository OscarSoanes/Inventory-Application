<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <header>
      <nav>
        <ul class="links">
          <li>
            <a href="/catalog"> Home </a>
          </li>
          <li>
            <a href="/catalog/items"> All Items </a>
          </li>
          <li>
            <a href="/catalog/categories"> All Categories </a>
            <ul class="inner-links">
              <% all_categories.forEach(category => { %>
                <li>
                  <a href="<%= category.url %>"> <%= category.name %> </a>
                </li>
              <% }); %>
            </ul>
          </li>
        </ul>
      </nav> 
      
      <nav>
        <ul class="links">
          <li>
            <a href="/catalog/category/create">Create new Category</a>
          </li>
          <li>
            <a href="/catalog/item/create">Create new Item</a>
          </li>
        </ul>
      </nav>
      
      <a class="gh-link" href="https://github.com/OscarSoanes">Built by Oscar Soanes</a>
    </header>

    <main>
      <h1> <%= title %> </h1>
      
      <div class="create-form">
        <form action="" method="post">
          <label for="name"> Category Name: </label>
          <input type="text" placeholder="Category name" name="name" required="true" value="<% undefined === category ? "" : category.name %>">

          <label for="description"> Category Description: </label>
          <textarea rows="4" placeholder="Category Description" name="description" required="true" value=" <% undefined === category ? "" : category.desc %>"></textarea>

          <button type="submit" class="primary-button">Submit</button>
        </form>
      
      <% if (errors) { %>
        <ul>
          <% errors.forEach(error => { %>
            <li> <%= error.msg %> </li>
          <% }) %>
        </ul>
      <% } %>

      </div>
    </main>
  </body>
</html>
